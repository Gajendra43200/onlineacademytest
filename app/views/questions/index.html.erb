<div class="table-wrapper">

<h1>All Reviews</h1>
<table class="fl-table">
  <thead>
    <tr>
      <th>question_id</th>
      <th>subject_id</th>
      <th>content</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <%@questions.each do |question| %>
      <tr>
        <td><%= question.id %></td>
        <td><%= question.subject_id%></td>
        <td><%= question.content %></td>
        <td><%= link_to "show option", subject_question_answers_path(question.subject_id,question.id),class:"btn btn-outline-dark" %> </td>

      </tr>
    <% end %>
  </tbody>
</table>
<br>

<div class="f1">
  <%= link_to "New question", new_subject_question_path,class:"btn btn-outline-dark" %>
  <%= button_to "logout", logout_path, method: :delete,class:"btn btn-outline-dark"%>
</div>

