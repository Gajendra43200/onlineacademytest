<!-- app/views/subjects/index.html.erb -->
<h1>test</h1>

<ul>
  <% @tests.each do |test| %>
    <li><%= link_to test.completed_subject_id, subject_completed_subject_tests_path(test) %></li>
  <% end %>
</ul>
<%= link_to 'New test', new_subject_completed_subject_test_path %>


<div class="table-wrapper">

<h1>All Reviews</h1>
<table class="fl-table">
  <thead>
    <tr>
      <th>test_id</th>
      <th>completed_subject_id</th>

      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <%@tests.each do |question| %>
      <tr>
        <td><%= question.id %></td>
        <td><%= question.completed_subject_id %></td>
      </tr>
    <% end %>
  </tbody>
</table>
<br>

<div class="f1">
  <%= link_to "New question", new_subject_question_path,class:"btn btn-outline-dark" %>
  <%= button_to "logout", logout_path, method: :delete,class:"btn btn-outline-dark"%>
</div>

