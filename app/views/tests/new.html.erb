<!-- app/views/completed_subjects/new.html.erb -->
<%= form_with(model: [@subject,@completed_subjects,@test], local: true) do |form| %>
    <%byebug%>
    <%= form.hidden_field :completed_subject_id, value: @completed_subjects.id%><br>
    <div>
    <%= form.label :subject_id %>
    <%= form.collection_select :subject_id, Subject.all, :id, :name, prompt: 'Select a subject' %>
  </div>

  <div class="table-wrapper">

<h1>All Reviews</h1>
<table class="fl-table">
  <thead>
    <tr>
      <th>question_id</th>
      <th>subject_id</th>
      <th>content</th>
      <th>option1</th>
      <th>option2</th>
      <th>option3</th>
      <th>option4</th>
      <th>correct_option</th>
      <th>Your question</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <%@subject.questions.each do |question| %>
      <tr>
        <td><%= question.id %></td>
        <td><%= question.subject_id%></td>
        <td><%= question.content %></td>
        <td><%= question.option1 %></td>
        <td><%= question.option2 %></td>
        <td><%= question.option3 %></td>
        <td><%= question.option4 %></td>
        <td><%= question.correct_option %></td>
        <td>
        <%= form.label :correct_ans%>
        <%= form.number_field :correct_ans %></td>
        </div>
      </tr>
    <% end %>
  </tbody>
</table>
<br>
    <%= form.submit 'submit test' %>
<% end %>
