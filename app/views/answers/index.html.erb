<div class="table-wrapper">

<h1>All Reviews</h1>
<table class="fl-table">
  <thead>
    <tr>
      <th>question_id</th>
      <th>option</th>
      <th>correct option</th>

      
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <%@answers.each do |question| %>
      <tr>
        <td><%= question.question_id%></td>
        <td><%= question.content %></td>
        <td><%= question.correct %></td>

      </tr>
    <% end %>
  </tbody>
</table>
<br>

  <%= link_to "all quetion", subject_questions_path,class:"btn btn-outline-dark" %>
